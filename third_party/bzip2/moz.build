    OS_LIBS += CONFIG["MZLA_BZIP2_LIBS"]
else:
    include("../rnpdefs.mozbuild")

    SOURCES += [
        "blocksort.c",
        "bzlib.c",
        "compress.c",
        "crctable.c",
        "decompress.c",
        "huffman.c",
        "randtable.c",
    ]
