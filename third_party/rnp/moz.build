    "-Wall",
    "-Wextra",
    "-Wunreachable-code",
    "-Wpointer-arith",
    "-Wmissing-declarations",
    "-Wno-pedantic",
    "-Wno-ignored-qualifiers",
    "-Wno-unused-parameter",
    "-Wno-missing-field-initializers",
]

