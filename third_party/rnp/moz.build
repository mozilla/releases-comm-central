SharedLibrary("rnp")

include("../rnpdefs.mozbuild")


@template
def IQuote(*paths):
    """Add a set of paths to the include path via -iquote"""
    if CONFIG["CC_TYPE"] == "clang-cl":
        flags = ["-Xclang", "-iquote", "-Xclang"]
    else:
        flags = ["-iquote"]
    for p in paths:
        CXXFLAGS += flags + [p]


