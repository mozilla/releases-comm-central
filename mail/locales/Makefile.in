searchplugins:: $(list-json)

$(DIST)/branding:
	$(NSINSTALL) -D $@

libs-%: AB_CD=$*
libs-%:
# merge if we're not en-US. Conditional function because
# we need the current value of AB_CD.
	$(if $(filter en-US,$(AB_CD)),, @$(MAKE) merge-$*)
