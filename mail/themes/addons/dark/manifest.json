{
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "thunderbird-compact-dark@mozilla.org"
    }
  },

  "name": "Dark",
  "description": "A theme with a dark color scheme.",
  "author": "Mozilla",
  "version": "1.1",

  "icons": {"32": "icon.svg"},

  "theme": {
    "colors": {
      "tab_background_text": "rgb(249, 249, 250)",
      "icons": "rgb(249, 249, 250, 0.7)",
      "frame": "rgb(24, 24, 26)",
      "popup": "#4a4a4f",
      "popup_text": "rgb(249, 249, 250)",
      "popup_border": "#27272b",
      "tab_line": "#0a84ff",
      "toolbar": "hsl(240, 1%, 20%)",
      "toolbar_bottom_separator": "hsl(240, 5%, 5%)",
      "toolbar_field": "rgb(71, 71, 73)",
      "toolbar_field_border": "rgba(249, 249, 250, 0.2)",
      "toolbar_field_separator": "#5F6670",
      "toolbar_field_text": "rgb(249, 249, 250)",
      "sidebar": "#38383D",
      "sidebar_text": "#d4d4d4",
      "sidebar_highlight": "#45a1ff",
      "sidebar_highlight_text": "#fff",
      "sidebar_highlight_border": "#bebebf",
      "sidebar_border": "#606064"
    }
  },

  "theme_experiment": {
    "stylesheet": "experiment.css"
  }
}
